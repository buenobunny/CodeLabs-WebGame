{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "/views/layouts",
    "ignore": [
      "firebase.json",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/main.handlebars"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}