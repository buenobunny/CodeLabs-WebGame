<title>Host</title>

<body>

    <header>
        <a href="/"><img id="logo" src="/cards/icon.png" alt="logo"></a>

    </header>

    <div class="container w-50 d-block">
        <div class="card nb-3">

            <h3 class="card-header text-center">Host a Game</h3>

            <div class="card-body">
                <form action="game">
                    <div class="form-group row">
                        <label for="event" class="col-sm-4 col-form-label">Name of Event:</label>
                        <div class="col-sm-8">
                            <input type="text" name="event" placeholder="Event" required class="form-control">
                        </div>
                        <br><br>
                    </div>

                    <div class="form-group row">
                        <label for="players" class="col-sm-4 col-form-label">Number of Players:</label>
                        <div class="col-sm-2">
                            <select class="form-control form-control-md btn-outline-secondary" required="true"
                                id="players" name="players">
                                <option value="3p">3</option>
                                <option value="4p">4</option>
                                <option value="5p">5</option>
                                <option value="6p">6</option>
                                <option value="7p">7</option>
                                <option value="8p">8</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="duration" class="col-sm-4 col-form-label">Time Limit:</label>
                        <div class="col-sm-3">
                            <select class="form-control form-control-md btn-outline-secondary" required="true"
                                id="duration" name="duration">
                                <option value="4">4 minutes</option>
                                <option value="5">5 minutes</option>
                                <option value="6">6 minutes</option>
                                <option value="7">7 minutes</option>
                                <option value="8">8 minutes</option>
                                <option value="9">9 minutes</option>
                            </select>

                        </div>
                    </div>

                    <div class="row">
                        <label for="btn-group" class="col-sm-4 col-form-label">Number of Spies:</label>
                        <div class="col-md-4 py-1">
                            <div class="form-check form-check-inline" required="true">
                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1"
                                    value="option1" required>
                                <label class="form-check-label" for="inlineRadio1">One</label>

                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2"
                                    value="option2">
                                <label class="form-check-label" for="inlineRadio2">Two</label>
                            </div>
                        </div>
                    </div>
                    <br>
                    <p><strong>Room Code:</strong> *autopopulates here*</p>
            </div>

            <div class="col-sm-2 offset-sm-9">
                <button type="submit" class="btn btn-outline-dark" onClick = "startTimer()">Lets go <svg width="1em" height="1em"
                        viewBox="0 0 16 16" class="bi bi-arrow-right-short" fill="currentColor"
                        xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                            d="M8.146 4.646a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.793 8 8.146 5.354a.5.5 0 0 1 0-.708z" />
                        <path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5H11a.5.5 0 0 1 0 1H4.5A.5.5 0 0 1 4 8z" />
                    </svg>
                </button>
            </div>
            </form>
            <br>
        </div>
    </div>

  

</body>

<link href="/css/host.css" rel="stylesheet" type="text/css" />
